---
import { Image } from "astro:assets";
const { start, end, title, institution, image } = Astro.props;
---

<div
  class="p-4 border border-gray-200 rounded-lg dark:border-neutral-700 space-y-3"
>
  <Image src={image} alt={title} class="size-10 rounded-sm" loading="lazy" />
  <h3 class="mb-1 text-xs text-gray-600 dark:text-neutral-400">
    {start} - {end}
  </h3>
  <p class="font-semibold text-sm text-gray-800 dark:text-neutral-200">
    {title}
  </p>
  <p class="text-sm text-gray-600 dark:text-neutral-400">
    {institution}
  </p>
</div>
