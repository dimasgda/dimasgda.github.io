---
import { Image } from "astro:assets";

const { profile, quote, name, isStart } = Astro.props;
---

<div class={`${isStart ? "sm:-ms-4" : ""} py-6 sm:px-4`}>
  <blockquote>
    <span class="text-sm text-gray-800 dark:text-neutral-200">{quote}</span>

    <footer class="mt-3">
      <div class="flex items-center gap-x-2">
        <Image class="shrink-0 size-5 rounded-full" src={profile} alt={name} />
        <div class="grow">
          <div class="text-xs text-gray-500 dark:text-neutral-500">
            {name}
          </div>
        </div>
      </div>
    </footer>
  </blockquote>
  <!-- End Review -->
</div>
