---
import { Image } from "astro:assets";

const { start, end, title, description, points, image, link } = Astro.props;
---

<div class="group relative flex gap-x-3">
  <div
    class="relative group-last:after:hidden after:absolute after:top-8 after:-bottom-0.5 after:start-6 after:w-px after:-translate-x-[0.5px] after:bg-gray-200 dark:after:bg-neutral-700"
  >
    <div class="relative z-10 size-12 flex justify-center items-center">
      <a href={link} target="_blank">
        <Image
          src={image}
          alt={title}
          class="size-10 rounded-full border border-gray-200 dark:border-none"
          loading="lazy"
        />
      </a>
    </div>
  </div>
  <div class="grow pb-8 group-last:pb-0">
    <h3 class="mb-1 text-xs text-gray-600 dark:text-neutral-400">
      {start} - {end}
    </h3>

    <p class="font-semibold text-sm text-gray-800 dark:text-neutral-200">
      {title}
    </p>

    <p class="mt-1 text-sm text-gray-600 dark:text-neutral-400">
      {description}
    </p>

    <ul class="list-disc ms-6 mt-3 space-y-1.5 text-justify">
      {
        points.map((item: string) => (
          <li class="ps-1 text-sm text-gray-600 dark:text-neutral-400">
            {item}
          </li>
        ))
      }
    </ul>
  </div>
</div>
