---
const { group, child } = Astro.props;

type SkillDetailChildProps = {
  icon?: (_props: Record<string, any>) => any;
  name: string;
};
---

<dl class="flex flex-col sm:flex-row gap-1">
  <dt class="min-w-40">
    <span class="block text-sm text-gray-500 dark:text-neutral-500">
      {group}
    </span>
  </dt>
  <dd>
    <ul>
      {
        child.map((item: SkillDetailChildProps, index: number) => {
          return (
            <li class="me-1 inline-flex items-center gap-0.5 text-sm text-gray-800 dark:text-neutral-200 group">
              {item.icon && <item.icon />}
              <span>
                {item.name} {index < child.length - 1 && ","}
              </span>
            </li>
          );
        })
      }
    </ul>
  </dd>
</dl>
